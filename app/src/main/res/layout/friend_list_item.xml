<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.login.widget.ProfilePictureView
        android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_small"
        android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profile_picture_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_small"
        android:id="@+id/friend_name_text"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_picture_view"
        app:layout_constraintStart_toEndOf="@+id/profile_picture_view"
        />

</androidx.constraintlayout.widget.ConstraintLayout>